// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

// Define tus modelos aqu√≠
// Modelo Usuario
model Usuario {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
  role     Role   @default(client)
  clientId Int?    @unique
  cliente  Client? @relation(fields: [clientId], references: [id])
}

enum Role {
  admin
  client
}

enum PaymentType {
  hour
  monthly
}
// Modelo Company
model Company {
  id       Int      @id @default(autoincrement())
  name      String
  client   Client?
}


model PaymentConfig {
  id       Int      @id @default(autoincrement())
  paymentType PaymentType  @default(hour)
  amount    Float
  Client Client?
}


model Client {
  id       Int      @id @default(autoincrement())
  firstname String
  lastname  String
  address         String
  Usuario         Usuario?
  companyId Int   @unique
  company  Company @relation(fields: [companyId], references: [id])
  paymentConfigId Int? @unique
  paymentConfig  PaymentConfig? @relation(fields: [paymentConfigId], references: [id])
}
